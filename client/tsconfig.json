{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "importHelpers": true,
    "jsx": "react",
    "esModuleInterop": true,
    "sourceMap": true,
    "strict": true,
    "baseUrl": "src",
    "paths": {
      "@/hooks": ["hooks/index"],
      "@/components": ["components/index"],
      "@/utils": ["utils/index"],
      "@/enums": ["enums/index"],
      "@/skeletons": ["skeletons/index"]
    },
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "mock/**/*",
    "src/**/*",
    "config/**/*",
    ".umirc.ts",
    "typings.d.ts"
  ]
}
